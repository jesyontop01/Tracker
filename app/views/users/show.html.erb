<h1>User's Profile</h1>

<%if current_user.office.office_name == "Guest" %>
<p id="notice"><%= notice %></p>

<h3> Welcome ! , underlisted are your created Documents :</h3>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Series</th>
      <th>Year</th>
      <th>Registrationno</th>
      <th>Candidaterange</th>
      <th>Request</th>
      <th>Attachment</th>
      <th>Email</th>
      <th>Created Date:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.series %></td>
        <td><%= document.year %></td>
        <td><%= document.registrationNo %></td>
        <td><%= document.CandidateRange %></td>
        <td><%= document.request %></td>
        <td><%= document.attachment %></td>
        <td><%= document.email %></td>
        <td><%= document.created_at %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>

<% else %>

<p id="notice"><%= notice %></p>

<h3> Welcome ! , underlisted are Documents presently in your Department  :</h3>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>Status</th>
      <th>Reason</th>
      <th>Fromoffice</th>
      <th>Tooffice</th>
      <th>Date Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.document.series %> <%= comment.document.year %> <%= comment.document.registrationNo %></td>
        <td><%= comment.status %></td>
        <td><%= comment.reason %></td>
        <td><%= comment.fromOffice %></td>
        <td><%= comment.office.office_name %></td>
        <td><%= comment.created_at %></td>
        <td><%= link_to 'Show', document_path(comment.document_id) %></td>
     <!--    <td><%#= link_to 'Show',  document_comment_path(@document,@comment) %></td>
        <td><%#= link_to 'Edit',  edit_document_comment_path(@comment) %></td>
        <td><%#= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>
